{
  "compilerOptions": {
    // ========= ОСНОВНЫЕ =========
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",

    // ========= УДОБСТВА =========
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // ========= ПУТИ =========
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/chat/ChatPage.js", "components/chat/ChatList.js"],
  "exclude": ["node_modules"]
}
